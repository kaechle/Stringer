{{!-- Put this into default.hbs --}}
{{!< default}}
<section class="grid">
    <header>
        <h1>{{@site.title}}</h1>
        <h2>{{@site.description}}</h2>
    </header>

    <section class="portfolio">
        {{#foreach posts}}

            <article>
                {{#if feature_image}}
                    <div>
                        <img src="{{img_url feature_image size="m"}}" alt="">
                    </div>
                {{/if}}
                <div>
                    <h2><a href="{{url}}">{{title}}</a></h2>
                    <p>{{authors}} {{date published_at timeago="true"}} {{tags}}</p>
                    <p>{{excerpt}}</p>
                </div>
            </article>

        {{/foreach}}
    </section>

    {{pagination}}
</section>